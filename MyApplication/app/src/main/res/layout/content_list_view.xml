<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_list_view"
    android:orientation="vertical">

    <Button android:id="@+id/activity_main_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="eoe软件列表"
        android:onClick="testListView1" />
    <Button android:id="@+id/activity_main_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="姓名列表"
        android:onClick="testListView2" />
    <Button android:id="@+id/activity_main_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="没有数据的列表"
        android:onClick="testListView3" />
    <Button android:id="@+id/activity_main_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="对列表进行操作"
        android:onClick="testListView4" />

</LinearLayout>
