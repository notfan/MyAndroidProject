<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vw1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4px"
    android:orientation="horizontal">    
 
    <ImageView android:id="@+id/cell_img"
        android:layout_width="96sp"
        android:layout_margin="4sp"
        android:layout_height="96sp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView android:id="@+id/drug_name1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/desc1"
            android:textSize="14sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

       <TextView android:id="@+id/drug_name2"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"/>

       <TextView android:id="@+id/desc2"
           android:textSize="14sp"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView android:id="@+id/alarm_time"
            android:textSize="18sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView android:id="@+id/cell_tip"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>